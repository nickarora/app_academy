<% action = (band.persisted? ? band_url(band) : bands_url) %>
<% method = (band.persisted? ? :patch : :post) %>
<% submit_txt = (band.persisted? ? "Update Band" : "Create Band") %>

<%= render '/layouts/errors' %>

<form action="<%= action %>" method="POST">

	<input type='hidden' name='_method' value="<%= method %>" %>

	<%= render '/layouts/form_authenticity' %>

	<%= render 'layouts/form_text', 
							label_name: 'Band Name',
							key: 'band',
							col_name: 'name',
							default_value: band.name %>

	<br>

	<input type="submit" value="<%=submit_txt %>">

</form>