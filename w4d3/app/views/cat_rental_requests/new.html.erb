<div class="container">
  <h1>Request a Cat Rental</h1>

  <form action="<%= cat_rental_request_index_url %>" method="post">

    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <div class="form-group">
      <label for="cat">Pick a Cat</label>
      <select name="cat_rental_request[cat_id]" class="form-control">
        <% @cats.each do |cat| %>
        <option value="<%= cat.id %>" <%= cat.id == @request.cat_id ? "selected" : "" %>>
          <%= cat.name %>
        </option>
        <% end %>
      </select>
    </div>

    <div class="form-group">
      <label for="req_start_date">Start date</label>
      <input name="cat_rental_request[start_date]" class="form-control" id="req_start_date" type="date"
      value="<%= @request.start_date.to_s %>"></input>
    </div>

    <div class="form-group">
      <label for="req_end_date">End date</label>
      <input name="cat_rental_request[end_date]" class="form-control" id="req_end_date" type="date"
      value="<%= @request.end_date.to_s %>"></input>

    </div>

    <button type="submit" class="btn btn-primary">Submit a Request!</button>
    <%= link_to "Back to Index", cats_url, :class => "btn btn-danger" %>

  </form>
</div>
