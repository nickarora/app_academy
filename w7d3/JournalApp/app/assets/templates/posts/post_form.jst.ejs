<form class="post-form">
	<div class="form-group">
  	<label for="title">Title</label>
  	<input type="text" class="form-control" name="post[title]" value="<%= post.escape('title') %>" id="title">
  </div>

  <div class="form-group">
  	<label for="body">Body</label>
  	<textarea name="post[body]" class="form-control" id="body"><%= post.escape('body') %></textarea>
  </div>
  
  <div class="form-group">
  	<button type="submit" class="btn btn-success">Post</button>
  </div>
</form>

<br>
<a href="#/posts/<%= post.escape('id') %>">Cancel</a>
